# MockExchange Environment Configuration
# Copy this file to .env and customize as needed

# =============================================================================
# GLOBAL CONFIGURATION
# =============================================================================
VERSION=0.1.5
TEST_ENV=false
DEBUG=false

# =============================================================================
# VALKEY (DATABASE) - Redis-compatible database
# =============================================================================
# For Docker Compose (default): use service name
VALKEY_HOST=valkey
# For external Valkey server: use IP address
# VALKEY_HOST=192.168.1.100
# VALKEY_HOST=10.0.0.50

VALKEY_PORT=6379
VALKEY_PASSWORD=your-secure-password-here

# =============================================================================
# ORACLE (PRICE FEEDS)
# =============================================================================
EXCHANGE=binance
SYMBOLS=BTC/USDT,ETH/USDT,ADA/USDT,XRP/USDT
INTERVAL_SEC=10
QUOTES=USDT
QUOTE=USDT
DISCOVER_QUOTES=true
# Max markets per quote asset (0 = unlimited)
DISCOVER_LIMIT=10

# =============================================================================
# ENGINE (API)
# =============================================================================
# For Docker Compose (default): use service name
ENGINE_HOST=engine
# For external Engine server: use IP address
# ENGINE_HOST=192.168.1.101
# ENGINE_HOST=10.0.0.51

ENGINE_PORT=8000
COMMISSION=0.001
API_KEY=your-api-key-here
CASH_ASSET=USDT
TICK_LOOP_SEC=10
PRUNE_EVERY_MIN=60
STALE_AFTER_H=24
EXPIRE_AFTER_H=2
SANITY_CHECK_EVERY_MIN=10
API_TIMEOUT_SEC=10

# Engine Order Processing
MIN_TIME_ANSWER_ORDER_MARKET=1
MAX_TIME_ANSWER_ORDER_MARKET=5
SIGMA_FILL_MARKET_ORDER=0.1

# =============================================================================
# PERISCOPE (DASHBOARD)
# =============================================================================
# For Docker Compose (default): use localhost
PERISCOPE_HOST=localhost
# For external Periscope server: use IP address
# PERISCOPE_HOST=192.168.1.102
# PERISCOPE_HOST=10.0.0.52

PERISCOPE_PORT=8501
APP_TITLE=MockExchange
REFRESH_SECONDS=5
QUOTE_ASSET=USDT
FRESH_WINDOW_S=60
N_VISUAL_DEGRADATIONS=60
SLIDER_MIN=10
SLIDER_MAX=1000
SLIDER_STEP=10
SLIDER_DEFAULT=50
LOCAL_TZ=Europe/Berlin
LOGO_FILE=logo.png

# =============================================================================
# AUTOMATIC URL CONSTRUCTION
# =============================================================================
# These URLs are automatically constructed from HOST and PORT variables
# You don't need to set them manually unless you want to override
# API_URL=http://${ENGINE_HOST}:${ENGINE_PORT}
# UI_URL=http://${PERISCOPE_HOST}:${PERISCOPE_PORT}

# =============================================================================
# EXTERNAL SERVICE EXAMPLES
# =============================================================================
# Example: Connect to external Valkey server
# VALKEY_HOST=192.168.1.100
# VALKEY_PORT=6379
# VALKEY_PASSWORD=external-password

# Example: Connect to external Engine API
# ENGINE_HOST=192.168.1.101
# ENGINE_PORT=8000
# API_KEY=external-api-key

# Example: Connect to external Periscope dashboard
# PERISCOPE_HOST=192.168.1.102
# PERISCOPE_PORT=8501
