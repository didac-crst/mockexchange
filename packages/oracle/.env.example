# ===========================
# MockX Oracle Configuration
# ===========================

# Exchange to fetch prices from (must be supported by CCXT)
EXCHANGE=binance

# Symbols to track, comma-separated (if empty, DISCOVER_QUOTES will be used)
# Example: BTC/USDT,ETH/USDT,SOL/EUR
SYMBOLS=

# Quote assets for discovery mode (comma-separated)
# Example: USDT,EUR,BTC
DISCOVER_QUOTES=USDT

# Max number of symbols to discover per quote asset
# Set to 0 for no limit
DISCOVER_LIMIT=0

# Enable discovery mode (true/false)
DISCOVER_ENABLE=false

# Interval (seconds) between price updates
INTERVAL_SEC=10

# Redis / Valkey connection URL

# Redis / Valkey host, port, and DB
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0

# Redis / Valkey password (leave empty if no password set)
REDIS_PASSWORD=SuperSecretPass

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO